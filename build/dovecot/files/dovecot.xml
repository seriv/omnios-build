<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="dovecot">
    <service name="network/imap/dovecot" type="service" version="1">
        <create_default_instance enabled="false"/>
        <single_instance/>
        <dependency name="network" grouping="require_all" restart_on="error"
            type="service">
            <service_fmri value="svc:/milestone/network:default"/>
        </dependency>
        <dependency name="filesystem" grouping="require_all"
            restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>
        <exec_method type="method" name="start"
            exec="/lib/svc/method/dovecot start" timeout_seconds="60"/>
        <exec_method type="method" name="reload" 
            exec="/lib/svc/method/dovecot reload" timeout_seconds="60"/>
        <exec_method type="method" name="stop" 
            exec="/lib/svc/method/dovecot stop" timeout_seconds="60"/>
        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="contract"/>
            <propval name="ignore_error" type="astring" value="core,signal"/>
        </property_group>
        <property_group name="application" type="application">
            <propval name="config_file" type="astring"
                value="/opt/csd/etc/dovecot/dovecot.conf"/>
        </property_group>
        <stability value="Evolving"/>
        <template>
            <common_name>
                <loctext xml:lang="C">
                    Dovecot Mail server
                </loctext>
            </common_name>
        </template>
    </service>
</service_bundle>
